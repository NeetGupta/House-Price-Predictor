# train_model.py (run locally)
import pandas as pd
from sklearn.linear_model import LinearRegression
import pickle

X = pd.DataFrame({'area': [1000, 1500, 1800, 2400, 3000]})
y = pd.Series([300000, 400000, 500000, 600000, 650000])

model = LinearRegression()
model.fit(X, y)

with open('model.pkl', 'wb') as f:
    pickle.dump(model, f)
